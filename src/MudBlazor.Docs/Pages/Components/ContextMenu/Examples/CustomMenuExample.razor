@inject IContextMenuService _contextMenus
@inject ISnackbar _snackbar

<MudGrid Justify="Justify.Center">
	<MudItem xs="12">	
		<MudContextualArea OnContextMenu="OpenCustomContextItem">
			<MudPaper Class="pa-16 mx-2" Style="height: 200px;">
				Context click here to see a fun image.
			</MudPaper>
		</MudContextualArea>
	</MudItem>
</MudGrid>

@code {

	public void OpenCustomContextItem(MouseEventArgs e)
	{
		_contextMenus.Open<CustomMenuExample_Menu>(e.ClientX, e.ClientY, menu =>
		{
			menu.Navigate += PostMessage;
		});
	}

	private void PostMessage(string message)
	{
		_snackbar.Add(message, Severity.Info);
	}
}